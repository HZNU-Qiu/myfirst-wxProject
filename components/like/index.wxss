/* components/like/index.wxss */

.container {
  /* 使用自适应并保证flex布局 */
  display: inline-flex;
  flex-direction: row;
  padding: 10rpx;
  width: 90rpx;
}

.container image {
  /* iphone6/7/8 使用rpx与原图大致1:1,使用px=2rpx
   * px是固定的，rpx可以自适应
   * 字体的大小一般都是固定的用px
   */
  width: 32rpx;
  height: 28rpx;
}

.container text {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #bbb;
  position: relative;
  bottom: 10rpx;
  left: 7rpx;
}
